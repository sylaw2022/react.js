{
  "name": "react-hello-world",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:old": "node server.js",
    "dev:client": "vite",
    "build": "next build",
    "start": "next start",
    "preview": "next start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "vitest run tests/frontend.test.jsx",
    "test:backend": "vitest run tests/backend.test.js",
    "test:e2e": "playwright test --project=chromium --reporter=list",
    "test:e2e:verbose": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:port": "node scripts/detect-port.js",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:frontend && npm run test:backend && npm run test:e2e",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "CI=true npm run test:frontend && CI=true npm run test:backend && CI=true npm run test:e2e",
    "test:jenkins": "npm run build && npm run test:ci",
    "kill:servers": "pkill -f 'next dev' && pkill -f 'next start' && pkill -f 'node server.js' || true",
    "kill:all": "pkill -f 'next' && pkill -f 'node' && pkill -f 'npm' || true",
    "kill:port": "lsof -ti:3000,3001,3002 | xargs kill -9 2>/dev/null || true"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.6.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^16.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.13",
    "jsdom": "^27.2.0",
    "playwright": "^1.57.0",
    "supertest": "^7.1.4",
    "vite": "^5.0.8",
    "vitest": "^4.0.13"
  }
}
